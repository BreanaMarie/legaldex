<div class="container">
  <section class='intro'>
    <div class="row">
      <div class="col-sm-4 profile_pic">
        <img src="<%= @user.image%>">
        <br> 
        <h4><%= "#{@user.first_name} #{@user.last_name}"  %> </h4>
        <br>
        <p><%= "Joined on #{@user.created_at.to_date.to_formatted_s(:long_ordinal)}" %></p>
        <br>
        <% @user.groups.each do |practice| %>
          <% practice = Practice.find(practice.practice_id) %>
          <%= link_to practice_path(practice.id) do%>
            <%= practice.title %>
       
          <%end%>
        <% end %>
        <br>
        <% if session[:user_id] == @user.id %>
        <%=link_to "Edit profile", edit_user_path, class:"btn" %>
        <%end%>
      </div>

      <div class="col-sm-8">
        
      </div>
    </div>
  </section>
</div>
  

